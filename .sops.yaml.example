# SOPS Configuration Example
# Copy this file to .sops.yaml and update with your encryption keys
# DO NOT commit .sops.yaml with real keys to git - add it to .gitignore if sharing keys is a concern

creation_rules:
  # Rule for encrypted environment files
  - path_regex: \.enc\.env\.(staging|production)$
    kms: 
        - $SOPS_KMS_ARN
  - path_regex: \.env\.(staging|production)$
    kms: 
        - $SOPS_KMS_ARN
